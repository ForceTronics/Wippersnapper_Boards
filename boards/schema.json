{
  "title": "Board Definition",
  "description": "A WipperSnapper-compatible Board for use in Adafruit IO",
  "type": "object",
  "required": [ "boardName", "mcuName", "mcuRefVoltage", "displayName", "productPageURL", "documentationURL" ],
  "properties": {
    "boardName": {
      "description": "Hardware name. Must be unique within this repository.",
      "type": "string",
      "minLength": 3,
      "maxLength": 40
    },
    "mcuName": {
      "description": "Microcontroller name.",
      "type": "string",
      "minLength": 3,
      "maxLength": 24
    },
    "mcuRefVoltage": {
      "description": "Microcontroller's maximum voltage reference, in Volts.",
      "type": "number",
      "minimum": 0
    },
    "displayName": {
      "description": "The human-friendly name of this board.",
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "description": {
      "description": "Device description.",
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "productPageURL": {
      "description": "Link to board's homepage.",
      "type": "string",
      "format": "uri"
    },
    "documentationURL": {
      "description": "Link to board's documentation.",
      "type": "string",
      "format": "uri"
    }
  }
}
